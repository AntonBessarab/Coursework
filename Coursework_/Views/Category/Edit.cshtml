@using Coursework_.ViewModels
@model CategoryViewModel

<h2>@("Редагувати категрію: " + Model.Name)</h2>
<form method="post">
    <div class="border p-3 mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            @if (ViewData["ErrorMessage"] != null)
            {
                <h3 class="text-danger">@ViewData["ErrorMessage"]</h3>
            }
            <label asp-for="Name">Назва</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <hr />
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    @if (Model.ChildCategories != null)
    {
        <div>
            <ul>
                @foreach (var subCategory in Model.ChildCategories)
                {
                    <li>
                        <a asp-action="Edit" asp-route-id="@subCategory.Id" class="btn btn-outline-primary">@subCategory.Name</a>
                    </li>
                }
            </ul>
        </div>
    }
    <a asp-action="Index">Назад</a>
</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
   }
