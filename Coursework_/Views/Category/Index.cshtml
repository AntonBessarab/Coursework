@using Coursework_.ViewModels

@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<h2>Категорії</h2>
<a asp-action="Create" class="btn btn-outline-secondary p-2">Створити нову</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th class="table-dark text-white">
                Назва
            </th>
            <th class="table-dark text-white">
                Більше
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.ParentCategoryId == null)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Деталі</a>
                        <a asp-action="Create" asp-route-parentCategoryId="@item.Id" class="btn btn-outline-secondary">Створити  підкатегорію</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
