@using Coursework_.ViewModels
@model List<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h2>Товари</h2>

    @if (Model.Count > 0)
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img style="width: auto; height: 100%;" src="@product.PhotoPath" alt="Фото електроніки" />
                        <div class="card-body">
                            <h4 class="card-title">@product.Name</h4>
                            <p class="card-text">@product.Description</p>
                            @if (product.Amount > 0)
                            {
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Home" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-sm btn-outline-success">Додати до корзини</a>
                                    </div>
                                    <div class="btn-group">
                                        <a asp-controller="Product" asp-action="DetailsProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary">Деталі</a>
                                    </div>
                                    <div class="btn-group">
                                        <a asp-controller="Product" asp-action="BuyProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary">Купити</a>
                                    </div>
                                    <small class="text-muted">$@product.Price</small>
                                </div>
                            }
                            else
                            {
                                <p class="text-center display-4 mt-5">Магазин порожній. Очікуйте поступлення.</p> 
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Немає доступного товару</p>
    }

</div>