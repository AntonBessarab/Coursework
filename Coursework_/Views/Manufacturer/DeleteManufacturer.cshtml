@using Coursework_.ViewModels
@model ManufacturerViewModel

<h2>Підтвердіть видалення виробника</h2>

<dl class="row">
    <dt class="col-sm-2">
        Назва
    </dt>
    <dd class="col-sm-10">
        @Model.Name
    </dd>

    <dt class="col-sm-2">
        Країна
    </dt>
    <dd class="col-sm-10">
        @Model.Country
    </dd>

    <dt class="col-sm-2">
        Опис
    </dt>
    <dd class="col-sm-10">
        @Model.Description
    </dd>
</dl>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Підтвердити видалення" class="btn btn-danger" />
    <br />
    <a asp-action="Index" class="btn btn-outline-dark p-2">Повернутись на головну</a>
</form>
