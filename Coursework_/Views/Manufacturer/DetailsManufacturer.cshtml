﻿@using Coursework_.ViewModels
@model ManufacturerViewModel

<h2>Деталі</h2>
<div>
    <h4>Manufacturer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Model.Country
        </dd>
    </dl>
    <h3>@("Other products of the " + Model.Name)</h3>
    @if (Model.ProductsViews == null)
    {
        <h3>У цього виробника немає товарів</h3>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                    <th>
                        Ціна
                    </th>
                    <th>
                        Фото
                    </th>
                    <th>
                        Категорія
                    </th>
                    <th>
                        Опис
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProductsViews)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.PhotoPath
                        </td>
                        <td>
                            @item.Category
                        </td>
                        <td>
                            @item.Description
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
<div>
    <a asp-controller="Device" asp-action="Index">Повернутися на головну</a>
</div>