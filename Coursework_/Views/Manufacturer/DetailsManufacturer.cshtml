﻿@using Coursework_.ViewModels
@model ManufacturerViewModel

<h2>Деталі</h2>
<div>
    <h4>Виробник</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 bg-secondary text-white">
            Назва
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2 bg-secondary text-white">
            Опис
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2 bg-secondary text-white">
            Країна походження
        </dt>
        <dd class="col-sm-10">
            @Model.Country
        </dd>
    </dl>
    <h3>@("Інші товари від" + Model.Name)</h3>
    @if (Model.ProductsViews == null)
    {
        <h3 class="text-secondary">У цього виробника немає товарів</h3>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="table-dark text-white">
                        Назва
                    </th>
                    <th class="table-dark text-white">
                        Ціна
                    </th>
                    <th class="table-dark text-white">
                        Фото
                    </th>
                    <th class="table-dark text-white">
                        Категорія
                    </th>
                    <th class="table-dark text-white">
                        Опис
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProductsViews)
                {
                    <tr>
                        <th>
                            @item.Name
                        </th>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.PhotoPath
                        </td>
                        <td>
                            @item.Category
                        </td>
                        <td>
                            @item.Description
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
<div>
    <a asp-controller="Manufactuurer" asp-action="Index" class="btn btn-outline-dark p-2">Повернутися на головну</a>
</div>