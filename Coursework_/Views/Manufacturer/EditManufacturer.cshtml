﻿@using Coursework_.ViewModels
@model ManufacturerViewModel

<h2>@("Редагувати " + Model.Name)</h2>
<form method="post">
    <div class="border p-3 mt-4">
        @if (ViewData["ErrorMessage"] != null)
        {
            <h3 class="text-danger">@ViewData["ErrorMessage"]</h3>
        }

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="m-1 p-1">Назва</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country" class="m-1 p-1">Країна</label>
            <textarea asp-for="Country" class="form-control"></textarea>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="m-1 p-1">Опис</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-success">Підтвердити</button>
    </div>
    <a asp-action="Index" class="btn btn-outline-dark">Назад</a>
</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}