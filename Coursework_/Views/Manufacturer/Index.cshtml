﻿@using Coursework_.ViewModels
@model List<ManufacturerViewModel>


<h2>Список виробників</h2>
<a asp-action="CreateManufacturer" class="btn btn-outline-secondary p-2">Додати новий</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th class="table-dark text-white">
                Назва
            </th>
            <th class="table-dark text-white">
                Опис
            </th>
            <th class="table-dark text-white">
                Країна
            </th>
            <th class="table-dark text-white">
                Додатково
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @item.Name
                </th>
                <td>
                    @item.Description
                </td>
                <td class="text-center">
                    @item.Country
                </td>
                <td>
                    <a asp-action="EditManufacturer" asp-route-id="@item.Id" class="btn btn-outline-warning">Редагувати</a>
                    <a asp-action="DeleteManufacturer" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
                    <a asp-action="DetailsManufacturer" asp-route-id="@item.Id" class="btn btn-outline-info">Деталі</a>
                </td>
            </tr>
        }
    </tbody>
</table>