@model Coursework_.ViewModels.ProductViewModel


    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Назва
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>

            <dt class="col-sm-2">
                Ціна
            </dt>
            <dd class="col-sm-10">
                @Model.Price
            </dd>

            <dt class="col-sm-2">
                Фото
            </dt>
            <dd class="col-sm-10">
            <div style="width: 350px; height: 200px; overflow: hidden;">
                <img style="width: auto; height: 100%;" src="@Model.PhotoPath" alt="Фото електроніки" />
            </div>
            </dd>

            <dt class="col-sm-2">
                Виробник
            </dt>
            <dd class="col-sm-10">
                @Model.Manufacturer
            </dd>

            <dt class="col-sm-2">
                Категорія
            </dt>
            <dd class="col-sm-10">
                @Model.Category
            </dd>

            <dt class="col-sm-2">
                Кількість
            </dt>
            <dd class="col-sm-10">
                @Model.Amount
            </dd>
        </dl>
        <div class="container">
            <h3>Опис</h3>
            <p class="text-black">
                @Model.Description
            </p>
        </div>
        <form method="post" asp-action="DeleteProduct">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <br />
            <a asp-action="Index">Повернутись</a>
        </form>
    </div>
