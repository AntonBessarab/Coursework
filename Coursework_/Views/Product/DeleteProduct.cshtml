@model List<Coursework_.ViewModels.ProductViewModel>

@foreach (var productViewModel in Model)
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Назва
            </dt>
            <dd class="col-sm-10">
                @productViewModel.Name
            </dd>

            <dt class="col-sm-2">
                Ціна
            </dt>
            <dd class="col-sm-10">
                @productViewModel.Price
            </dd>

            <dt class="col-sm-2">
                Фото
            </dt>
            <dd class="col-sm-10">
                @productViewModel.PhotoPath
            </dd>

            <dt class="col-sm-2">
                Виробник
            </dt>
            <dd class="col-sm-10">
                @productViewModel.Manufacturer
            </dd>

            <dt class="col-sm-2">
                Категорія
            </dt>
            <dd class="col-sm-10">
                @productViewModel.Category
            </dd>

            <dt class="col-sm-2">
                Кількість
            </dt>
            <dd class="col-sm-10">
                @productViewModel.Amount
            </dd>
        </dl>
        <div class="container">
            <h3>Опис</h3>
            <p class="text-black">
                @productViewModel.Description
            </p>
        </div>
        <form method="post" asp-action="DeleteProduct">
            <input type="hidden" asp-for="@productViewModel.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <br />
            <a asp-action="Index">Повернутись</a>
        </form>
    </div>
}