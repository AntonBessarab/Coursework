﻿@using Coursework_.ViewModels
@model ProductViewModel

<h2>Деталі</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 bg-secondary text-white">
            Назва
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2 bg-secondary text-white">
            Ціна
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2 bg-secondary text-white">
            Фото
        </dt>
        <dd class="col-sm-10">
            <div style="width: 350px; height: 200px; overflow: hidden;">
                <img style="width: auto; height: 100%;" src="@Model.PhotoPath" alt="Фото електроніки" />
            </div>
        </dd>
        <dt class="col-sm-2 bg-secondary text-white">
            Виробник
        </dt>
        <dd class="col-sm-10">
            @Model.Manufacturer
        </dd>
        <dt class="col-sm-2 bg-secondary text-white">
            Категорія
        </dt>
        <dd class="col-sm-10">
            @Model.Category
        </dd>
        <dt class="col-sm-2 bg-secondary text-white">
            Кількість
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
    </dl>
    <div class="card border-dark mb-3">
        <h3 class="card-header bg-transparent border-dark">Опис</h3>
        <p class="card-text text-black m-3 p-3">
            @Model.Description
        </p>
    </div>
    <a asp-action="Index" class="btn btn-outline-dark">Повернутись</a>
</div>