﻿@using Coursework_.ViewModels
@model ProductViewModel

<h2>Details</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Ціна
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Фото
        </dt>
        <dd class="col-sm-10">
            @Model.PhotoPath
        </dd>
        <dt class="col-sm-2">
            Виробник
        </dt>
        <dd class="col-sm-10">
            @Model.Manufacturer
        </dd>
        <dt class="col-sm-2">
            Категорія
        </dt>
        <dd class="col-sm-10">
            @Model.Category
        </dd>
        <dt class="col-sm-2">
            Кількість
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
